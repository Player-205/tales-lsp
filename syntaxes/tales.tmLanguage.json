{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Tales",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#property"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#link"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "^>.+$"
			}]
		},
		"property": {
			"patterns": [
				{
					"name": "entity.name.type.anchor",
					"match": "^(\\s)*[^:#]*?\\S:"
				}
			]
		},
    "comment": {
			"patterns": [
				{
					"begin": "#",
					"beginCaptures": {
						"0": {
							"name": "comment"
						}
					},
					"end": "\\n",
					"name": "comment.line"
				}
			]
		},
    "link": {
      "patterns": [
        {
          "match": "(\\s|^)(/\\S+\\b)",
          "captures": {
            "2" : { "name": "markup.underline.link"}
          }
        },
        {
          "match": "(\\s|^)(\\./\\S+\\b)",
          "captures": {
            "2" : { "name": "markup.underline.link"}
          }
        },
        {
          "match": "(![^!]+\\b)(\\s|$)",
          "captures": {
            "1" : {"name": "markup.underline.link"}
          }
        }
      ]
    }
	},
	"scopeName": "source.tales"
}
